<!DOCTYPE html>
<html>
  <head>
    <title>Lyster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body >
    <div class ="bg-light container">
      <div class="col-md-12">
      <nav class="navbar navbar-light">
        <div class = 'container'>

          <div class = 'col-md'>
          <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag "lyster_logo.png"%>
          <% end %>
          </div>

          <div class = 'col-md'>
            <div class = 'row'>
            <h1>Lyster</h1>
            </div>
            <div class ='row'>
            <%= link_to 'Tournaments', tournaments_path , class: 'btn btn-primary'%> | 
            <%= link_to 'Participants', users_path , class: 'btn btn-primary'%>
            </div>
          </div>

          <div class = 'col-md'>
          <% session[:prev_url] = request.url %>
          <% if current_user %>
            <%= link_to 'Logout', logout_path, method: :delete, class: 'btn btn-primary' %>
          <% else %>
            <%= render :partial => 'sessions/form' %>
          <% end %>
          </div>
        </div>
      </nav>
      <p id="notice"><%= notice %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
