<h1>Participants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user , class: 'btn btn-primary'%></td>
        <% if (current_user && current_user.id == user.id) %>
        <td><%= link_to 'Edit', edit_user_path(user) , class: 'btn btn-primary'%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Register New Participant', new_user_path , class: 'btn btn-primary' %>
