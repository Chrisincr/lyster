

<h1>Matches</h1>

<table>
  <thead>
    <tr>
      <th>Round</th>
      <th>Contender</th>
      <th>Challenger</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.round.number %></td>
        <% if match.points.count > 0 %>
        <td><%= match.points.first.contender.user.name %></td>
        <td><%= match.points.first.challenger.user.name %></td>
        <% else %>
          <td> define contender </td>
          <td> define challenger </td>
        <% end %>
        <td><%= link_to 'Show', tournament_round_match_path(tournament_id:@tournament,round_id:@round,id:match.id), class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_tournament_round_match_path(tournament_id:@tournament,round_id:@round,id:match.id), class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', tournament_round_match_path(tournament_id:@tournament,round_id:@round,id:match.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_tournament_round_match_path(tournament_id:@tournament,round_id:@round), class: 'btn btn-primary'  %>
