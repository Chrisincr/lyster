<div class='container'>
  <div class='row'>

    <div class='col-md-6'>
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Number:</strong>
        <%= @round.number %>
      </p>
      
      <p>
        <strong>Tournament:</strong>
        <%= @round.tournament.name %>
      </p>
      
      <%= link_to 'Edit', edit_round_path(params[:tid],params[:rid]), class: 'btn btn-primary'  %> |
      <%= link_to 'Back', tournament_path(params[:tid]), class: 'btn btn-primary'  %>
    </div>

    <div class='col-md-6'>
      <%= render :partial => 'matches/index' %>
    </div>

  </div>
</div>





