
<h1>Rounds</h1>
<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Matches</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rounds.each do |round| %>
      
        <tr>
          <td><%= round.number %></td>
          <td><%= round.matches.count %></td>
          <td><%= link_to 'Show', tournament_round_path(tournament_id:@tournament) , class: 'btn btn-primary'%></td>
          <td><%= link_to 'Edit', @round, class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', @round, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    
  </tbody>
</table>

<br>

<%= link_to 'New Round', @round, class: 'btn btn-primary' %>
