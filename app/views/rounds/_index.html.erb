<p id="notice"><%= notice %></p>

<h1>Rounds</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Matches</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rounds.each do |round| %>
      
        <tr>
          <td><%= round.number %></td>
          <td><%= round.matches.count %></td>
          <td><%= link_to 'Show', round_path(params[:tid],round) , class: 'btn btn-primary'%></td>
          <td><%= link_to 'Edit', edit_round_path(params[:tid],round), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', round_path(params[:tid],round), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    
  </tbody>
</table>

<br>

<%= link_to 'New Round', new_round_path, class: 'btn btn-primary' %>
